<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span> Causas <small></small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                Causas
            </li>
        </ol>
    </div>
</div>
<% if can? :create, Cause %>
<%= link_to 'Nueva Causa', new_cause_path, class: 'btn btn-success' %>
<% end %>
<% if @causes.count > 0 %>
<div class="panel panel-default" style="margin-top:20px;">
  <div class="panel-body">
    <form class="form-inline" role="form">
      
    </form>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Rol</th>
        <th>Caratula</th>
        <% if can? :read, Payment %>
        <th>Honorarios</th>
        <% end %>
        <th>Cliente</th>
        <th>Materia</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @causes.each do |cause| %>
        <tr>
          <td><%= cause.role %></td>
          <td><%= cause.matter %></td>
          <% if can? :read, Payment %>
          <td><%= to_clp cause.honorary %></td>
          <% end %>
          <td><%= cause.client.id_number %></td>
          <td><%= cause.area.name %></td>
          <td><%= link_to '<span class="glyphicon glyphicon-search" aria-hidden="true"></span> Ver'.html_safe, cause, class: 'btn btn-default btn-xs' %></td>
          <td><%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar'.html_safe, edit_cause_path(cause), class: 'btn btn-primary btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% end %>