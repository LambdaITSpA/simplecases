<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Causas <small>Index</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-dashboard"></i> Causas
            </li>
        </ol>
    </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Rol</th>
      <th>Materia</th>
      <th>Honorarios</th>
      <th>Cliente</th>
      <th>Tipo de causa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @causes.each do |cause| %>
      <tr>
        <td><%= cause.role %></td>
        <td><%= cause.matter %></td>
        <td><%= cause.honorary %></td>
        <td><%= cause.client.id_number %></td>
        <td><%= cause.cause_type.name %></td>
        <td><%= link_to 'Ver', cause, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Editar', edit_cause_path(cause), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Eliminar', cause, class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: "EstÃ¡s seguro de eliminar la causa #{cause.role}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cause', new_cause_path, class: 'btn btn-success' %>
