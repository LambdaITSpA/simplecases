<h1>Listing causes</h1>

<table>
  <thead>
    <tr>
      <th>Id number</th>
      <th>Role</th>
      <th>Court</th>
      <th>Matter</th>
      <th>Honorary</th>
      <th>Client</th>
      <th>User</th>
      <th>Cause type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @causes.each do |cause| %>
      <tr>
        <td><%= cause.id_number %></td>
        <td><%= cause.role %></td>
        <td><%= cause.court %></td>
        <td><%= cause.matter %></td>
        <td><%= cause.honorary %></td>
        <td><%= cause.client %></td>
        <td><%= cause.user %></td>
        <td><%= cause.cause_type %></td>
        <td><%= link_to 'Show', cause %></td>
        <td><%= link_to 'Edit', edit_cause_path(cause) %></td>
        <td><%= link_to 'Destroy', cause, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

