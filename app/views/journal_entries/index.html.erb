<h1>Listing journal_entries</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Body</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @journal_entries.each do |journal_entry| %>
      <tr>
        <td><%= journal_entry.subject %></td>
        <td><%= journal_entry.body %></td>
        <td><%= journal_entry.date %></td>
        <td><%= link_to 'Show', cause_journal_entry_path(@cause.id, journal_entry.id) %></td>
        <td><%= link_to 'Edit', edit_cause_journal_entry_path(@cause.id, journal_entry.id) %></td>
        <td><%= link_to 'Destroy', cause_journal_entry_path(@cause.id, journal_entry.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

