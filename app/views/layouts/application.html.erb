<!DOCTYPE html>
<html ng-app="SCapp">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
	<meta name="author" content="">
	<title>Simple Cases  <%= current_user.todays_payments.count + current_user.late_payments.count > 0 ? "(#{current_user.todays_payments.count + current_user.late_payments.count})" : ''  %></title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <!--<link rel="stylesheet" type="text/css" href="assets/sb-admin.css">-->
    <%= stylesheet_link_tag 'sb-admin.css' %>
	<%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic' %>

    <%= yield :styles %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= yield :js %>

	<%= csrf_meta_tags %>
</head>
<body>
	<div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header" style="width:210px;">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                    <%= link_to 'Simple Cases', user_root_url, class: 'navbar-brand' %>
                <% if current_user %>
            </div>
            <div class="nav navbar-form navbar-left dropdown open" role="search" ng-controller="GetCausesController">
                <div class="form-group has-feedback">
                    <input class="form-control" type="search" placeholder="Buscar" autofocus ng-model="search">
                    <span class="glyphicon glyphicon-search form-control-feedback"></span>
                    <!--<h1 ng-if="name">Hello, {{name}}</h1>-->
                </div>
                <ul class="dropdown-menu" style="left:15px;margin:0px;" ng-if="search" role="menu">
                    <li role="presentation" class="dropdown-header">Causas</li>
                    <li role="presentation" ng-repeat="cause in causes | filter:search"><a href="<%= causes_path %>/{{ cause.id }}">{{ cause.matter }}</a></li>
                    <li role="presentation" class="divider"></li>
                    <li role="presentation" class="dropdown-header">Clientes</li>
                    <li role="presentation" ng-repeat="client in clients | filter:search"><a href="<%= clients_path %>/{{ client.id }}">{{ client.name }}</a></li>
                </ul>
                <% end %>
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
                <% if current_user %>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="glyphicon glyphicon-bell"></span> 
                        <% if current_user.todays_payments.count + current_user.late_payments.count > 0 %>
                        <span class="badge progress-bar-danger"><%= current_user.todays_payments.count + current_user.late_payments.count %></span> 
                        <% end %>
                        <b class="caret"></b></a>
                    <ul class="dropdown-menu alert-dropdown">
                        <% if current_user.todays_payments.count + current_user.late_payments.count > 0 %>
                            <% current_user.todays_payments.each do |tp| %>
                            <li class="bg-warning">
                                <%= link_to "Cobrar causa #{tp.cause.matter}", "#{cause_path(tp.cause)}#payments" %>
                            </li>    
                            <% end %>
                            <% current_user.late_payments.each do |tp| %>
                            <li class="bg-danger">
                                <%= link_to "Pago atrasado en causa #{tp.cause.matter}", "#{cause_path(tp.cause)}#payments" %>
                            </li>    
                            <% end %>
                        <% else %>
                            <li class="dropdown-header">Sin notificaciones</li>
                        <% end %>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> <%= current_user.name %> <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                        	<%= link_to '<span class="glyphicon glyphicon-user"></span> Perfil'.html_safe, user_profile_path %>
                        </li>
                        </li>
                        <li class="divider"></li>
                        <li>
                        	<%= link_to('<span class="glyphicon glyphicon-off"></span> Salir'.html_safe, destroy_user_session_path, :method => :delete) %>
                        </li>
                    </ul>
                </li>
                <% end %>
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <% if current_user %>
                        <li><%= nav_link '<span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home'.html_safe, user_root_url %></li>
                        <% if current_user.admin? %>
                		    <%= render 'layouts/admin_sidenav' %>
                        <% else %>
                            <%= render 'layouts/user_sidenav' %>
                        <% end %>
                    <% end %>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>

        <div id="page-wrapper" style="min-height:600px;">

            <div class="container-fluid">
				<%= yield %>
                <div class="row">
                    <div class="col-lg-12">
	                    <% if notice %>
							<div class="alert alert-success alert-dismissable" role="alert"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><%= notice %></div>
						<% end %>
						<% if alert %>
							<div class="alert alert-danger alert-dismissable" role="alert"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><%= alert %></div>
						<% end %>
                    </div>
                </div>

                <!-- /.row -->

                
