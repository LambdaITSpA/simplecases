    <div class="col-lg-12">
        <h1 class="page-header">
            Evento <small>Ver</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-dashboard"></i> <%= link_to 'Eventos', events_path %> > <%= link_to @event.name, @event %> > Ver
            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title">
            <%= @event.name %>
          </h2>
        </div>
        <div class="panel-body">
          <p>
            Fecha: <%= @event.date_time.strftime('%F %H:%M') %>
          </p>
          <p>
            Descripci√≥n: <%= @event.description %>
          </p>
        </div>
      </div>
    </div>
</div>
<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <%= link_to '<span class="fa fa-pencil"></span> Editar'.html_safe, edit_event_path(@event), class: 'btn btn-primary btn-xs' %>
  </div>
</div>