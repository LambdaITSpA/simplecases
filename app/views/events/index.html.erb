<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <span class="glyphicon glyphicon-calendar"></span> Eventos <small></small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                Eventos
            </li>
        </ol>
    </div>
</div>
<%= link_to 'Nuevo Evento', new_event_path, class: 'btn btn-success' %>
<% if @events.count > 0 %>
<div class="panel panel-default" style="margin-top:20px;">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripci√≥n</th>
        <th>Fecha</th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr onmouseover="this.style.cursor='pointer'" onclick="window.location ='<%=event_path event %>'">
          <td><%= event.name %></td>
          <td><%= event.description %></td>
          <td><%= event.date_time %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% end %>