<% content_for :styles do %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<% end %>
<h1>Organizaciones</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>RUT</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td><%= organization.id_number %></td>
        <td><%= link_to 'Ver', organization, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Editar', edit_organization_path(organization), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Eliminar', organization, class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: "¿Estás seguro de eliminar la organización #{organization.name}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Organización', new_organization_path, class: 'btn btn-success' %>
