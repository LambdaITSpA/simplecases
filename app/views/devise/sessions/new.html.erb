<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="input-group form-group m-b-20">
        <span class="input-group-addon" style="background-color:rgba(0,0,0,0.4);">
                <i class="fa fa-envelope"></i>
            </span>
        <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control input-lg' %>
    </div>

    <div class="input-group form-group m-b-20">
        <span class="input-group-addon" style="background-color:rgba(0,0,0,0.4);">
                <i class="fa fa-lock"></i>
            </span>
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Contraseña', class: 'form-control input-lg' %>
    </div>

    <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me, 'Recordar contraseña' %></div>
    <% end -%>

  <div class="actions"><%= f.submit "Acceder", class: 'btn btn-success btn-block btn-lg' %></div>
<% end %>
<br />
<%= render "devise/shared/links" %>