<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group m-b-20">
        <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control input-lg' %>
    </div>

    <div class="form-group m-b-20">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control input-lg' %>
    </div>

    <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

  <div class="actions"><%= f.submit "Log in", class: 'btn btn-success btn-block btn-lg' %></div>
<% end %>
<br />
<%= render "devise/shared/links" %>