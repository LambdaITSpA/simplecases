<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Cliente <small>Ver</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-dashboard"></i> <%= link_to 'Clientes', clients_path %> > Ver
            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
    <p id="notice"><%= notice %></p>
    <div class="list-group">
        <div class="list-group-item active">
          <h4><%= @client.name %></h4>
        </div>
        <p class="list-group-item">
          <strong>Rut:</strong>
          <%= @client.id_number %>
        </p>

        <p class="list-group-item">
          <strong>Tipo:</strong>
          <%= @client.client_type.name %>
        </p>

        <p class="list-group-item">
          <strong>Email:</strong>
          <%= @client.data.email %>
        </p>

        <p class="list-group-item">
          <strong>Teléfono:</strong>
          <%= @client.data.phone %>
        </p>

        <p class="list-group-item">
          <strong>Dirección:</strong>
          <%= @client.data.address %>
        </p>
    </div>
    <%= link_to 'Editar', edit_client_path(@client), class: 'btn btn-default btn-xs' %>
    <%= link_to 'Atras', clients_path, class: 'btn btn-default btn-xs' %>
</div>