<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Cliente <small>Ver</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-dashboard"></i> <%= link_to 'Clientes', clients_path %> > Ver
            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
    <p id="notice"><%= notice %></p>
    <div class="list-group">
        <div class="list-group-item active">
          <h4><%= @client.data(current_user.organization.id).name %></h4>
        </div>
        <p class="list-group-item">
          <strong>Rut:</strong>
          <%= @client.id_number %>
        </p>

        <p class="list-group-item">
          <strong>Tipo:</strong>
          <%= @client.client_type.name %>
        </p>

        <p class="list-group-item">
          <strong>Email:</strong>
          <%= @client.data(current_user.organization.id).email %>
        </p>

        <p class="list-group-item">
          <strong>Teléfono:</strong>
          <%= @client.data(current_user.organization.id).phone %>
        </p>

        <p class="list-group-item">
          <strong>Dirección:</strong>
          <%= @client.data(current_user.organization.id).address %>
        </p>
        <p class="list-group-item">
          <strong>Información Adicional:</strong>
          <%= @client.data(current_user.organization.id).other %>
        </p>
    </div>
    <%= link_to 'Editar', edit_client_path(@client), class: 'btn btn-default btn-xs' %>
    <%= link_to 'Atras', clients_path, class: 'btn btn-default btn-xs' %>
  </div>
</div>
<div class="row">
  <% if @client.causes.count > 0 %>
  <div class="panel panel-default" style="margin-top:20px;">
    <div class="panel-body">
      <form class="form-inline" role="form">
        
      </form>
    </div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Rol</th>
          <th>Caratula</th>
          <th>Ultimo Avance</th>
          <th>Tribunal</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @client.causes.each do |cause| %>
          <tr onmouseover="this.style.cursor='pointer'" onclick="window.location ='<%=cause_path cause %>'">
            <td><%= cause.role %></td>
            <td><%= cause.matter %></td>
            <td><%= cause.journal_entries.last.subject %></td>
            <td><%= cause.court.name%></td>
            <td><%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_cause_path(cause), class: 'btn btn-primary btn-xs' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% end %>
</div>