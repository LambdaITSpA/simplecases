<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Clientes <small></small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                Clientes
            </li>
        </ol>
    </div>
</div>
<% if @clients.count > 0 %>
<div class="panel panel-default" style="margin-top:20px;">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Rut</th>
        <th>Email</th>
        <th>Tel√©fono</th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each do |client| %>
        <tr onmouseover="this.style.cursor='pointer'" onclick="window.location ='<%= client_path client %>'">
          <td><%= link_to client.data(current_user.organization.id).name, client %></td>
          <td><%= client.id_number %></td>
          <td><%= client.data(current_user.organization.id).email %></td>
          <td><%= client.data(current_user.organization.id).phone %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% end %>