 <% content_for :js do %>
	<script type="text/javascript">
	$( document ).ready(function() {
		$('#status').change(function(){
			id = $('#status option:selected').val();
		    if (id == "people") {
		        $("#people").slideDown();
		        $("#company").slideUp();
		    }

		    if (id == "company") {
		    	$("#company").slideDown();
		        $("#people").slideUp(); 
		    }
		});
	});
	</script>

<% end %>

